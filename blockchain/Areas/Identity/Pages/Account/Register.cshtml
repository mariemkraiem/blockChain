@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="col-lg-12 backgroundPic">
    <div class="col-sm-3 col-sm-offset-4 block-background">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p class="nowUser">Creer un nouveau compte <p/>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-sm-12">
                <label asp-for="Input.Email">Mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="Input.ConfirmPassword">Repetez mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="btns">
                <button type="submit" class="btn btn-default">Enregistrer</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
